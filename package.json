{
  "name": "adenison-core",
  "version": "1.0.0",
  "private": true,
  "author": "Akinduko Olugbenga Akinwumi",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf 'dist'",
    "build-funcs": "babel src --out-dir dist",
    "watch-funcs": "babel -w src --out-dir dist",
    "serve": "nodemon server.js",
    "build": "npm run clean && npm run build-funcs",
    "deploy": "yarn clean && yarn build-funcs && yarn deps-copy && yarn docker-build",
    "docker-build": "docker build .",
    "start": "node ./dist/index.js",
    "postinstall": "npm run -s build",
    "test": "eslint src",
    "deps-copy": "cpx '*{package.json,yarn.lock,.env}' 'dist'",
    "static-copy": "cp -r ./doc public/",
    "deps-install": "cd 'dist' && yarn",
    "tree": "tree -a -I 'node_modules|.git|.gitignore|dist|.vscode' -P '*.js|*.json'",
    "gen-docs": "apidoc -i src -o doc",
    "release": "release-it --no-npm.publish --preRelease=beta --no-src.push --no-requireUpstream"
  },
  "description": "Adenison logistics core middleware",
  "main": "dist",
  "dependencies": {
    "@google/maps": "^0.5.5",
    "accesscontrol": "^2.2.1",
    "ajv": "^6.4.0",
    "apollo-errors": "^1.9.0",
    "axios": "^0.18.0",
    "bcrypt": "^2.0.1",
    "bcrypt-promise": "^2.0.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cpx": "^1.5.0",
    "dotenv": "^6.0.0",
    "email-templates": "^4.0.1",
    "express": "^4.16.3",
    "express-sslify": "^1.2.0",
    "express-swagger-generator": "^1.1.9",
    "influx": "^5.0.7",
    "jsonwebtoken": "^8.2.2",
    "mongodb": "^3.1.6",
    "mongoose": "^5.3.0",
    "morgan": "^1.9.0",
    "nodemailer": "^4.6.6",
    "passport": "^0.4.0",
    "paystack": "^2.0.1",
    "paystack-api": "^1.0.3",
    "redoc": "^2.0.0-alpha.40",
    "swagger-jsdoc": "^3.2.3",
    "swagger-ui-express": "^4.0.1",
    "uninstall": "0.0.0",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.3.3"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "apidoc-plugin-schema": "^0.1.8",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-watch": "^2.0.7",
    "cpx": "^1.5.0",
    "express-print-routes": "^1.0.0",
    "nodemon": "^1.17.5",
    "release-it": "^7.5.0",
    "rimraf": "^2.6.2"
  }
}
